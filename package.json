{
  "name": "wp-thumbhash",
  "type": "module",
  "private": true,
  "version": "0.0.2",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build": "config/cli/cli.js assets:build",
    "format:assets": "npx prettier --write '**/*.{ts,js,css,scss}'",
    "format:php": "vendor/bin/php-cs-fixer fix --config config/phpcsfixer.config.php --allow-risky=yes",
    "version": "pnpm changeset version && config/cli/cli.js version:patch",
    "pot:make": "SLUG=$(basename \"$(pwd)\"); wp i18n make-pot . languages/$SLUG.pot --include=src,$SLUG.php",
    "wp-env": "wp-env",
    "wp-env:open": "open http://localhost:9783",
    "wp-env:open:test": "open http://localhost:9784",
    "test": "pnpm run test:pest --no-coverage && pnpm run test:e2e",
    "test:pest": "wp-env run tests-cli --env-cwd=wp-content/plugins/wp-thumbhash vendor/bin/pest",
    "test:pest:ci": "pnpm run test:pest --coverage-clover coverage.xml",
    "test:e2e": "pnpm exec playwright test --config ./tests/E2E/playwright.config.js",
    "test:e2e:dev": "PLAYWRIGHT_ENV=dev pnpm test:e2e --ui",
    "test:e2e:install": "pnpm exec playwright install --with-deps",
    "act:php-tests": "act -j php-tests --matrix php:8.2 --container-options '--privileged'"
  },
  "dependencies": {
    "@hirasso/thumbhash-custom-element": "^0.5.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@playwright/test": "^1.49.1",
    "@wordpress/env": "^10.11.0",
    "fast-glob": "^3.3.2",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "picocolors": "^1.1.1",
    "prettier": "^3.3.3"
  }
}
